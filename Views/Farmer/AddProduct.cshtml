@model Core.Models.Product
@{
    ViewData["Title"] = "Add Product";
}

<h2>Add New Product</h2>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input asp-for="Category" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Production Date</label>
        <input asp-for="ProductionDate" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Add Product</button>
</form>
